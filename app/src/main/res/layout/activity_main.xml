<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tembg"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#8539A6"
        android:text="Temperature Converter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/getvalue"
        android:layout_width="228dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="117dp"
        android:background="@drawable/ans_border"
        android:hint="Enter Temperature"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/showans"
        android:layout_width="195dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="328dp"
        android:background="@drawable/ans_border"
        android:text="0.0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <RadioGroup
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="199dp">

        <RadioButton
            android:id="@+id/c2f"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/ans_border"
            android:text="C to F"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/f2c"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:background="@drawable/ans_border"
            android:text="F to C"
            android:textAlignment="center"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/ansbtn"
        android:layout_width="143dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="219dp"
        android:background="@drawable/round_btn"
        android:text="CONVERT"
        android:textSize="15dp" />

    <Button
        android:id="@+id/againbtn"
        android:layout_width="141dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:background="@drawable/round_btn"
        android:text="RECHECK"
        android:textSize="15dp" />


</RelativeLayout>